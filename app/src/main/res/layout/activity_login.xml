<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:id="@+id/sign_in_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/sign_in_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/sign_in_txt"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_in_txt"
            android:ems="10"
            android:hint="@string/e_mail_input"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_input"
            android:ems="10"
            android:hint="@string/password_input"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/sign_in_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/password_input"
            android:layout_below="@id/password_input"
            android:text="@string/sign_in" />

        <TextView
            android:id="@+id/show_register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/sign_in_btn"
            android:layout_below="@id/sign_in_btn"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:text="@string/register_new_user"
            android:textAlignment="center" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <EditText
            android:id="@+id/register_username_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/username_input"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/register_email_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_username_input"
            android:ems="10"
            android:hint="@string/e_mail_input"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/register_password_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_email_input"
            android:ems="10"
            android:hint="@string/password_input"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/register_user_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/register_password_input"
            android:layout_below="@id/register_password_input"
            android:text="@string/register" />

        <TextView
            android:id="@+id/show_login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/register_user_btn"
            android:layout_below="@id/register_user_btn"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:text="@string/already_have_account"
            android:textAlignment="center" />

    </RelativeLayout>

</merge>